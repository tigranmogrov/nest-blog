{
  "tabWidth": 2,
  "printWidth": 80,
  "semi": true,
  "trailingComma": "es5",
  "singleQuote": true,
  "overrides": [
    {
      "files": [
        "**/*.css",
        "**/*.scss",
        "**/*.html",
        "*.json",
        ".eslintrc.js"
      ],
      "options": {
        "singleQuote": false
      }
    }
  ],
  "bracketSpacing": true,
  "bracketSameLine": true,
  "proseWrap": "always",
  "arrowParens": "always",
  "endOfLine": "lf",
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true
}
